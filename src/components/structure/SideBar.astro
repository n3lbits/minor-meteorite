---
import BreadCrumbs from '../../components/BreadCrumbs.astro';
import Social from '../../components/Social.astro';
import SideNav from '../../components/SideNav.astro';

interface Props {
  activeName: string;
  currentPath: string;
  currentName?: string | undefined;
  routes: string[];
}

const { currentPath, currentName = undefined, routes } = Astro.props;
---

<aside class='side-bar'>
  <BreadCrumbs
    currentPath={currentPath}
    currentName={currentName}
    position='left'
    routes={routes}
  />
  <div class='nav-wrapper'>
    <section class='nav-header'>
      <section>
        <section class='nav-logo'>
          <h1 class='site-title'>
            <a class='title' href='/'>nelailen.</a>
          </h1>
        </section>
        <SideNav />
      </section>

      <nav class='internal-nav'>
        <!-- {
          processedNavMenu.flatMap((navItem) => (
            <ul class='nav-items'>
              <h3 class='nav-heading'>{navItem.heading}</h3>
              {navItem.children.map((child) => (
                <li>
                  <a href={child.link}>{child.label}</a>
                </li>
              ))}
            </ul>
          ))
        } -->
      </nav>
      <Social />
    </section>
  </div>
</aside>
<style>
  .side-bar {
    top: 0;
    display: none;
    margin-block: 2rem;
    margin-left: 1rem;
    transition-property: opacity;
    transition-timing-function: linear;
    transition-duration: 0.1s;
  }

  @media screen and (min-width: 640px) {
    .side-bar {
      display: flex;
      height: 100vh;
      top: 0;
      margin-left: 0rem;
      border-right-width: 1px;
      border-right-color: rgba(240, 248, 255, 0.555);
      border-right-style: dashed;
      transition-property: opacity;
      transition-timing-function: linear;
      transition-duration: 0.1s;
    }
  }
  .nav-wrapper {
    margin-left: 1rem;
    font-size: 0.95rem;
    padding: 0.5rem;
    max-height: 100svh;
  }

  @media screen and (min-width: 640px) {
    .nav-wrapper {
      flex-grow: 1;
      flex-shrink: 1;
      flex-basis: auto;
      font-size: 1.2rem;
      margin-inline: 1rem;
      position: sticky;
      top: 4rem;
    }
  }
  .nav-header {
    position: sticky;
    top: 4rem;
  }

  .nav-logo {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  .site-title {
    display: inline-block;
    line-height: 2rem;
    margin: 0;
  }
  .title {
    display: block;
    text-decoration: none;
    color: var(--rp-text);
    text-align: center;
    padding: 10px 0;
    font-size: 1.7rem;
    font-weight: bold;
    text-shadow:
      2px 2px 0 var(--space-battle-blue),
      -2px -2px var(--purple-ink);
    transition: all 500ms;
  }
  .title:hover,
  .title:focus {
    text-shadow:
      6px 6px 0 var(--space-battle-blue),
      -4px -4px var(--purple-ink);
    transition: all 500ms;

    transform-origin: bottom right;

    &:active {
      outline-style: dashed;
      outline-offset: 3px;
      outline-width: 1px;
      outline-color: var(--purple-illusion);
      transition: all 300ms;
    }

    .title:hover:after {
      transform: scaleX(1);
      transform-origin: bottom left;
    }
  }

  .main-menu {
    display: flex;
    column-gap: 0.75rem;
    align-items: center;
    flex-wrap: wrap;
    padding-bottom: 0.75rem;
    border-bottom: dashed 2px var(--wc-1);
  }
  .main-menu a {
    display: block;
    text-decoration: none;
    font-weight: 500;
    transition: all;
    transition-duration: 0.3s;
    font-size: 1rem;
  }
  .main-menu a.active {
  }
  .main-menu a:hover,
  .main-menu a:focus {
    transition: all;
    transition-duration: 0.3s;
    color: #955cf1;
    filter: saturate(1);
    text-decoration-line: underline;
    text-decoration-style: dashed;
    text-decoration-thickness: 2px;
    text-decoration-color: var(--rp-text);
    text-underline-offset: 2px;
  }

  .main-menu a:active {
    outline-style: dashed;
    outline-offset: 3px;
    outline-width: 1px;
    transition: all 300ms;
  }

  .internal-nav {
    display: block;
  }
  ul.nav-items {
    list-style-type: none;
    margin-bottom: 1rem;
    padding: 0;
  }
  h3.nav-heading {
    font-size: 1.125rem;
    line-height: 1.75rem;
    letter-spacing: -0.01em;
    font-weight: 500;
  }
</style>
