<style>
  .socials {
    position: relative;
    display: flex;
    outline-style: dashed;
    outline-color: rgba(38, 46, 46, 0.24);
    outline-width: 1px;
    outline-offset: -2px;
    padding: 0.5rem;
    margin-block: 0.5rem;
    width: 100%;
  }
  .icon-border {
    display: flex;
    list-style: none;
    row-gap: 0.5rem;
    padding: 0.5rem;
    width: 100%;
    height: 100%;
    align-items: start;
  }
  li.icon {
    margin-inline: 0.5rem;
  }
  svg.gh {
    display: block;
    color: var(--rp-text);
    width: 26px;
    height: 26px;
    transition: all 300ms;
  }
  a svg.gh:hover,
  a svg.gh:focus {
    color: var(--rp-pine);
    filter: saturate(3);
    transition: all 300ms;
  }
  svg.lin {
    display: block;
    color: var(--rp-text);
    width: 26px;
    height: 26px;
    transition: all 300ms;
  }
  a svg.lin:hover,
  a svg.lin:focus {
    color: #955cf1;
    filter: saturate(2);
    transition: all 300ms;
  }
</style>
